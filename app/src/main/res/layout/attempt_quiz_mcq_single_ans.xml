<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".Attempt_Quiz_2">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:paddingBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/MCQ_single_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is a sample Question"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.046"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.208" />

            <RadioGroup
                android:id="@+id/MCQ_single_myRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkedButton="@+id/sound"
                android:paddingBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/MCQ_single_question"
                app:layout_constraintTop_toBottomOf="@+id/MCQ_single_question"
                app:layout_constraintVertical_bias="0.22000003">

                <RadioButton
                    android:id="@+id/MCQ_single_sound"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Choice 1" />

                <RadioButton
                    android:id="@+id/MCQ_single_vibration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choice 2" />

                <RadioButton
                    android:id="@+id/MCQ_single_silent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choice 3" />
            </RadioGroup>

            <Button
                android:id="@+id/MCQ_single_Next_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:onClick="StudentAttemptQuizObjectiveSANextButton"
                android:text="Next"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.842"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/MCQ_single_myRadioGroup"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/MCQ_single_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="199dp"
                android:text="00:01:00"
                android:textColor="@color/purple_200"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/MCQ_single_Next_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" ></TextView>

            <Button
                android:id="@+id/MCQ_single_button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="StudentAttemptQuizObjectiveSABackButton"
                android:text="Back"
                app:layout_constraintEnd_toStartOf="@+id/MCQ_single_Next_button"
                app:layout_constraintHorizontal_bias="0.08"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/MCQ_single_Next_button" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="238dp"
                android:layout_marginTop="29dp"
                android:layout_marginEnd="22dp"
                android:text="Time Left"
                app:layout_constraintEnd_toStartOf="@+id/MCQ_single_timer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" ></TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>